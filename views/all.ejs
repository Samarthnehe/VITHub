<%- include('partials/header'); %>
    
        <div class="col heya" >
            <div class="hey1">
            <div class="top">
                <h1 style="text-align: center;font-family: 'Montserrat', sans-serif;">TOPICS</h1>
            </div>
            <div class="topics">
                <div class="points">
                    <div style="list-style-type:none;" class="list">
                        <a href="/blogs/academics"><i class="pencil alternate large icon"></i>Academics</a>
                        <a href="/blogs/hostel"><i class="home large icon"></i>Hostels</a>
                        <a href="/blogs/mess"><i class="Food large icon"></i>Mess</a>
                        <a href="/blogs/roomallotment"><i class="bed large icon"></i>Room Allotment</a>
                        <a href="/blogs/books"><i class="Book large icon may"></i>Books</a>
                        <a href="/blogs/projects"><i class="Text File large icon"></i>Projects</a>
                        <a href="/blogs/faculty"><i class="male large icon"></i>Faculty</a>
                        <a href="/blogs/subjects"><i class="clipboard outline large icon"></i>Subjects</a>
                        <a href="/blogs/ffcs"><i class="Desktop large icon"></i>FFCS</a>
                        <a href="/blogs/transport"><i class="car large icon"></i>Transport</a>
                        
                    </div>
                </div>
            </div>
            </div>
        </div>
    <div class="col hi" >
        
        <div class="ui main text " >
        <div class="ui huge header hey" ><span style="color: black;">Related Posts</span></div>
        <div class="ui top attached segment" style="background-color:transparent;border: 1px solid transparent;">
            <div class="ui items">
                <% blogs.forEach(function(blog){ if(blog.title!=null ) {
                    %>
                    <div class="item sam">
                        
                        <div class="content" style="color: white;">
                            <div class="meta" style="margin-right: 10px;margin-top: 10px;margin-bottom: 10px;margin-left: 10px;">
                                <div  style="font-size:14px;color: rgb(252, 255, 102);"><i class="user circle small icon"></i><b><%= blog.name.toUpperCase() %></b><span style="color: white;font-size: small;">- <%= blog.created.toDateString() %></span></div>
                            </div>
                            <a class="header" href="/blogs/<%= blog._id %>" style="color: rgb(16, 188, 240);margin-top: 5px;margin-bottom: 10px;margin-left: 10px;"><%= blog.title %></a>
                            <div>
                                 <% if( blog.body[0]!=null ){
                                     if(blog.body[0].ans!=""){%>
                                    <div >
                                        <div class="meta" style="border: 0.2px solid rgb(0, 0, 0); margin-top: 10px;color: rgb(255, 255, 255);background-color:rgb(3, 39, 30);height: auto;margin-bottom: 10px;padding-top: 15px;padding-bottom: 5px;padding-left: 10px;border-radius: 10px;padding-right: 5px;margin-left: 7px;margin-right: 7px;">
                                            <div style="margin-bottom: 10px;width: 60%;">
                                                <snap  style=" color: rgb(102, 255, 0);padding-bottom: 5px;"><%= blog.body[0].name%></span>
                                                
                                            </div>
                                            <div style="padding-top: 5px;">
                                                <span style="font-size: medium;"><%= blog.body[0].ans %></span> 
                                            </div>
                                            <div class="rep">
                                                <% if(blog.body[0].reply!=null){
                                                    for (var i=0;i<blog.body[0].reply.length;i=i+1){%>
                                                <div style="background-color: rgb(41, 102, 25);border: 0.5px solid rgb(0, 0, 0);margin-top: 10px;padding: 8px;margin-left: 0px;margin-right: 0px;box-shadow:3px 3px rgba(0,0,0,0.5)">
                                                    <span style="color: yellow;margin-bottom: 2px;"><%=blog.body[0].reply[i].name%></span>
                                                    <p><%=blog.body[0].reply[i].ans%></p>
                                                    

                                                </div>
                                                
                                                <%}}%>
                                            </div>
                                            <% if(currUser){
                                                var flag=0;for (var k=0;k<blog.body[0].liked.length;k++){
                                                if (blog.body[0].liked[k].name==currUser.username){
                                                    flag=flag+1;
                                                }
                                            }}%>
                                            <div style="height:20px;background-color: rgb(3, 39, 30);margin-top: 5px;font-size: small;">
                                                <span style="float:right;padding-right:10px;"><%=blog.body[0].like%> likes</span>
                                                <span class="reps" style="float:right;padding-right:10px;"><%=(blog.body[0].reply.length)%> comments</span>
                                            </div>
                                            <div style="margin-top: 10px;border-top: 0.5px solid black;padding-left: 5px;padding-right: 30px;display: flex;margin-top: 5px;">
                                                 
                                                
                                                <% if (flag==0){%>
                                                <form  id="my_form"  style="flex: 50%;margin-bottom: 0px;margin-top: 5px;padding-right: 50px;" action="blogs/<%=blog._id %>/like?_method=PUT" method="POST"   > 
                                                    
                                                    <button name="like[name]" class="btn btn-success " style="padding: 7px;width:90px;display: flex;" ><i  class="thumbs up large  icon" style="padding-left: 5px;"></i><span style="color: black;"><b>Like</b></span></button>
                                                </form>
                                                <%}else{%>
                                                    <form  id="my_form" style="flex: 50%;margin-bottom: 0px;margin-top: 5px;padding-right: 50px;" action="blogs/<%=blog._id %>/like1?_method=PUT" method="POST" > 
                                                    
                                                        <button name="like[name]" class="btn btn-danger " style="padding: 7px;width:90px;display: flex;" ><i  class="thumbs down large  icon" style="padding-left: 5px;"></i><span style="color: black;"><b>Dislike</b></span></button>
                                                    </form>


                                                    <%}%>
                                                <a  href="blogs/<%=blog._id%>/reply" class="btn btn-info reply sama" style="color:black;" ><i class="comment outline icon large"></i><b>Comment</b></a>
                                            </div>
                                           
                                        </div >
                                       
                                    </div>
                                <%} }%>
                                    
                                
                            </div>
                            
                            <div class="extra">
                                <a class="btn btn-light" href="/blogs/<%=blog._id %>">
                                    <b>Ans This?</b>
                                    
                                </a>
                                <a class="btn btn-warning" style="display: inline;" href="/blogs/<%=blog._id %>/view">
                                   <b>View Answers (<%= blog.body.length%>)</b> 
                                </a>
                            </div>
                        </div> 
                    </div>
                <% }}) %>
            </div>
        </div>
    </div>
    
    </div>
    <%- include('partials/footer');%>




